package com.FunctionDemos;

public class D03ReturningValue {

	public static double calculateAreaOfCircle(int rd)
	{
		double area = 3.142 * rd * rd;
		return area;
	}
	/*
	 * Points to be noted about return statement
	 * 1. return statement terminate the function
	 * 2. it will return single value to the calling function
	 * 3. it will transfer the control to calling function
	 */
	public static void main(String[] args) {
		calculateAreaOfCircle(5);

	}

}
